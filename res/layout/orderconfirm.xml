<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <FrameLayout
        android:id="@+id/confirm_top_fl"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/confirm_bottom_ll"
        android:layout_alignParentTop="true"
        android:background="#FFFAE6" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dip"
                android:layout_gravity="center"
                android:background="@drawable/orderconfirm_bg"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/orderconfirm_devider_top" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dip"
                    android:layout_marginTop="15dip"
                    android:gravity="center"
                    android:text="请输入您的信息"
                    android:textColor="#C30A0A"
                    android:textSize="22sp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/orderconfirm_devider" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip"
                    android:layout_marginTop="10dip"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/orderconfim_contact_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dip"
                        android:minEms="4"
                        android:text="联系人"
                        android:textColor="#583F34"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/orderconfim_contact_edt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/orderconfim_contact_tv"
                        android:background="@null"
                        android:hint="请输入名字"
                        android:textSize="18sp" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/orderconfirm_devider" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip"
                    android:layout_marginTop="10dip"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/orderconfim_contact_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dip"
                        android:minEms="4"
                        android:text="手机号码"
                        android:textColor="#583F34"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/orderconfim_tel_edt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/orderconfim_contact_tv"
                        android:background="@null"
                        android:hint="请输入手机"
                        android:inputType="phone"
                        android:textSize="18sp" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/orderconfirm_devider" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip"
                    android:layout_marginTop="10dip"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="15dip"
                        android:text="就餐环境"
                        android:textColor="#583F34"
                        android:textSize="18sp" />

                    <RadioGroup
                        android:id="@+id/orderconfirm_radioGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <RadioButton
                            android:id="@+id/orderconfirm_radio1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dip"
                            android:layout_weight="1.0"
                            android:background="@drawable/radio_bg"
                            android:button="@null"
                            android:checked="true"
                            android:gravity="center"
                            android:padding="4dip"
                            android:text="不限"
                            android:textColor="@drawable/radio_textcolor"
                            android:textSize="18sp" >
                        </RadioButton>

                        <RadioButton
                            android:id="@+id/orderconfirm_radio2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dip"
                            android:layout_weight="1.0"
                            android:background="@drawable/radio_bg"
                            android:button="@null"
                            android:gravity="center"
                            android:padding="5dip"
                            android:text="包间"
                            android:textColor="@drawable/radio_textcolor"
                            android:textSize="18sp" >
                        </RadioButton>
                    </RadioGroup>
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/orderconfirm_devider" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dip"
                    android:layout_marginTop="18dip"
                    android:gravity="center"
                    android:text="请选择就餐时间"
                    android:textColor="#C30A0A"
                    android:textSize="22sp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/orderconfirm_devider" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dip"
                        android:layout_weight="1.0"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dip"
                            android:drawableBottom="@drawable/orderconfirm_date_devider"
                            android:drawablePadding="10dip"
                            android:gravity="center"
                            android:text="日期"
                            android:textColor="#583F34"
                            android:textSize="18sp" />

                        <com.jiaodong.hxl.widget.wheel.WheelVerticalView
                            android:id="@+id/orderconfirm_date_wheel"
                            android:layout_width="match_parent"
                            android:layout_height="120dip" />
                        <!--
                  ListView
                android:id="@+id/orderconfirm_date_list"
                android:layout_width="match_parent"
                android:layout_height="100dip"
                android:choiceMode="singleChoice"
                android:divider="@drawable/orderconfirm_date_devider"
                android:listSelector="@null"
                android:scrollbars="none" /
                        -->
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.0"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dip"
                            android:drawableBottom="@drawable/orderconfirm_time_devider"
                            android:drawablePadding="10dip"
                            android:gravity="center"
                            android:text="时间"
                            android:textColor="#583F34"
                            android:textSize="18sp" />

                        <com.jiaodong.hxl.widget.wheel.WheelVerticalView
                            android:id="@+id/orderconfirm_time_wheel"
                            android:layout_width="match_parent"
                            android:layout_height="120dip" />
                        <!--
                  ListView
                android:id="@+id/orderconfirm_time_list"
                android:layout_width="match_parent"
                android:layout_height="100dip"
                android:choiceMode="singleChoice"
                android:divider="@drawable/orderconfirm_time_devider"
                android:listSelector="@color/transparent"
                android:scrollbars="none" />
                        -->
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/orderconfirm_devider_bottom" />
            </LinearLayout>
        </ScrollView>

        <RelativeLayout
            android:id="@+id/main_top_rl"
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:background="@drawable/main_top_bg" >

            <Button
                android:id="@+id/confirm_back_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dip"
                android:layout_marginRight="5dip"
                android:background="@drawable/back_btn" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="提交订单"
                android:textColor="#323232"
                android:textSize="24sp" />
        </RelativeLayout>
    </FrameLayout>
	<LinearLayout
	    android:id="@+id/confirm_bottom_ll"
        android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:paddingTop="10dip"
    	android:paddingBottom="10dip"
    	android:layout_alignParentBottom="true"
        android:background="@drawable/menu_submit_bg"
	    android:orientation="vertical">
	    <Button
	        android:id="@+id/confirm_submit_btn"
		    android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:paddingLeft="20dip"
	        android:paddingRight="20dip"
	        android:paddingTop="10dip"
	        android:paddingBottom="10dip"
	        android:background="#C30A0A"
	        android:textColor="@color/white"
	        android:textStyle="bold"
	        android:gravity="center"
	       	android:textSize="16sp"
	        android:text="提交菜单"/>
	 </LinearLayout>
</RelativeLayout>