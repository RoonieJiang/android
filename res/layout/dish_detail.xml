<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
    	android:layout_height="wrap_content">
    	<TextView
    	    android:id="@+id/dish_detail_name_top"
    	    android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:textColor="#643C32"
    		android:textSize="24sp"
    		android:layout_marginTop="15dip"
    		android:layout_marginBottom="15dip"
    		android:layout_centerInParent="true"
    		android:singleLine="true"
    		android:text="菜品详情"/>	
   		<Button
   		    android:id="@+id/dish_detail_close_btn"
   		    android:layout_width="20dip"
   			android:layout_height="20dip"
   			android:layout_marginRight="10dip"
   			android:layout_alignParentRight="true"
   			android:layout_centerVertical="true"
   			android:background="@drawable/dish_detail_close_btn"/>
    </RelativeLayout>
	<com.jiaodong.hxl.widget.OnlineImageView
	    android:id="@+id/dish_detail_imgv"
	    android:layout_width="match_parent"
   		android:layout_height="300dip"
   		android:src="@drawable/gallery2"
   		android:scaleType="fitXY"/>
	<RelativeLayout 
	    android:layout_width="match_parent"
   		android:layout_height="wrap_content">
   		<Button
   		    android:id="@+id/dish_detail_add"
   		    android:layout_width="wrap_content"
   			android:layout_height="35dip"
   			android:paddingLeft="10dip"
   			android:paddingRight="10dip"
   			android:layout_marginRight="15dip"
   			android:layout_alignParentRight="true"
   			android:layout_centerVertical="true"
   			android:text="加入菜单"
   			android:textColor="@color/white"
   			android:textSize="15sp"
   			android:background="@drawable/dishtype_item_bg"/>
	   	<LinearLayout 
		    android:layout_width="wrap_content"
	   		android:layout_height="wrap_content"
	   		android:layout_marginLeft="10dip"
	   		android:orientation="vertical">
	   		<LinearLayout 
			    android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:layout_gravity="left"
	    		android:layout_marginTop="8dip"
	    		android:orientation="horizontal">
	    		<ImageView 
			        android:id="@+id/dish_detail_tuijian_imgv"
			        android:layout_width="wrap_content"
		    		android:layout_height="wrap_content"
		    		android:src="@drawable/dish_tuijian"/>
	    		<TextView
				    android:id="@+id/dish_detail_name_tv"
			   	    android:layout_width="wrap_content"
			   		android:layout_height="wrap_content"
			   		android:textColor="#643C32"
			   		android:layout_marginLeft="5dip"
			   		android:textSize="18sp"
			   		android:text="菜品名"/>
	    		<TextView
		    	    android:id="@+id/dish_detail_taste"
		    	    android:layout_width="wrap_content"
		    		android:layout_height="wrap_content"
		    		android:textColor="#C30A0A"
		    		android:layout_marginLeft="8dip"
		    		android:textSize="11sp"
		    		android:drawablePadding="3dip"
		    		android:gravity="center"
		    		android:layout_gravity="bottom"
		    		android:background="@drawable/dish_taste_bg"
		    		android:text="中辣"/>
    		</LinearLayout>
    		<LinearLayout
			    android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:layout_marginTop="8dip"
		    	android:orientation="horizontal">
			    <TextView
		    	    android:id="@+id/dish_detail_eat_count"
		    	    android:layout_width="wrap_content"
		    		android:layout_height="wrap_content"
		    		android:textColor="#8C8C8C"
		    		android:textSize="10sp"
		    		android:drawablePadding="3dip"
		    		android:gravity="center"
		    		android:singleLine="true"
		    		android:drawableLeft="@drawable/dish_eat"
		    		android:text="119人点过"/>
			    <TextView
		    	    android:id="@+id/dish_detail_like_count"
		    	    android:layout_width="wrap_content"
		    		android:layout_height="wrap_content"
		    		android:textColor="#8C8C8C"
		    		android:layout_marginLeft="8dip"
		    		android:textSize="10sp"
		    		android:drawablePadding="3dip"
		    		android:gravity="center"
		    		android:singleLine="true"
		    		android:drawableLeft="@drawable/dish_like"
		    		android:text="105人喜欢"/>
			</LinearLayout>
		    <LinearLayout 
			    android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:layout_gravity="left"
	    		android:orientation="horizontal">
	    		<TextView
				    android:id="@+id/dish_detail_price_tv"
			   	    android:layout_width="wrap_content"
			   		android:layout_height="wrap_content"
			   		android:layout_marginTop="5dip"
			   		android:textColor="#C30A0A"
			   		android:textSize="18sp"
			   		android:textStyle="bold"
			   		android:text="￥68"/>
	    		<TextView
		    	    android:id="@+id/dish_detail_weight"
		    	    android:layout_width="wrap_content"
		    		android:layout_height="wrap_content"
		    		android:textColor="#643C32"
		    		android:textSize="12sp"
		    		android:layout_gravity="bottom"
		    		android:text="/500g"/>
		    	<TextView
		    	    android:id="@+id/dish_detail_minweight"
		    	    android:layout_width="wrap_content"
		    		android:layout_height="wrap_content"
		    		android:layout_marginLeft="10dip"
		    		android:textColor="#643C32"
		    		android:textSize="12sp"
		    		android:layout_gravity="bottom"
		    		android:text="500g起订"/>
	    	</LinearLayout>
		</LinearLayout>
   	</RelativeLayout>
   	<ImageView
	    android:layout_width="match_parent"
   		android:layout_height="wrap_content"
   		android:layout_marginTop="5dip"
   		android:src="@drawable/dish_detail_devider"/>
   	<LinearLayout
   	    android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
    	android:layout_marginTop="10dip"
    	android:layout_marginBottom="20dip">
   	    <TextView
	   	    android:layout_width="wrap_content"
	   		android:layout_height="wrap_content"
	   		android:textColor="#643C32"
	   		android:textSize="14sp"
	   		android:layout_marginLeft="15dip"
	   		android:text="食材："/>
   	    <TextView
		    android:id="@+id/dish_detail_ingredients"
	   	    android:layout_width="wrap_content"
	   		android:layout_height="wrap_content"
	   		android:textColor="#643C32"
	   		android:textSize="14sp"
	   		android:text="里脊肉、鸡蛋、生粉、辣椒、味达美、葱姜蒜、鸡蛋壳、哈哈等"/>
   	</LinearLayout>
   	
</LinearLayout>
