<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dip"
    android:background="@color/white"
    android:orientation="horizontal" >
    
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_alignParentLeft="true"
	    android:layout_marginLeft="10dip"
	    android:layout_marginTop="10dip"
	    android:gravity="center"
	    android:layout_toLeftOf="@+id/dish_item_right_ll"
	    android:orientation="vertical" >
		<LinearLayout 
		    android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_gravity="left"
    		android:orientation="horizontal">
    		<ImageView 
		        android:id="@+id/dish_tuijian_imgv"
		        android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:src="@drawable/dish_tuijian"/>
		    <TextView
	    	    android:id="@+id/dish_name"
	    	    android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:textColor="#643C32"
	    		android:textSize="16sp"
	    		android:layout_marginLeft="5dip"
	    		android:drawablePadding="5dip"
	    		android:layout_gravity="top"
	    		android:text="菜名"/>
		    <TextView
	    	    android:id="@+id/dish_taste"
	    	    android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:textColor="#C30A0A"
	    		android:layout_marginLeft="8dip"
	    		android:textSize="11sp"
	    		android:drawablePadding="3dip"
	    		android:gravity="center"
	    		android:background="@drawable/dish_taste_bg"
	    		android:text="中辣"/>
		</LinearLayout>
		
    	<LinearLayout
		    android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:layout_marginTop="8dip"
	    	android:orientation="horizontal">
		    <TextView
	    	    android:id="@+id/dish_eat_count"
	    	    android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:textColor="#8C8C8C"
	    		android:textSize="10sp"
	    		android:drawablePadding="3dip"
	    		android:gravity="center"
	    		android:singleLine="true"
	    		android:drawableLeft="@drawable/dish_eat"
	    		android:text="119人点过"/>
		    <TextView
	    	    android:id="@+id/dish_like_count"
	    	    android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:textColor="#8C8C8C"
	    		android:layout_marginLeft="8dip"
	    		android:textSize="10sp"
	    		android:drawablePadding="3dip"
	    		android:gravity="center"
	    		android:singleLine="true"
	    		android:drawableLeft="@drawable/dish_like"
	    		android:text="105人喜欢"/>
		</LinearLayout>
		
    	<LinearLayout
		    android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:layout_marginTop="8dip"
	    	android:orientation="horizontal"
	    	android:layout_gravity="bottom">
	    	<TextView
	    	    android:id="@+id/dish_price"
	    	    android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:textColor="#C30A0A"
	    		android:textStyle="bold"
	    		android:textSize="16sp"
	    		android:minEms="2"
	    		android:layout_gravity="bottom"
	    		android:text="￥342"/>
	    	<TextView
	    	    android:id="@+id/dish_weight"
	    	    android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:textColor="#643C32"
	    		android:textSize="12sp"
	    		android:layout_gravity="bottom"
	    		android:text="/500g"/>
	    	<TextView
	    	    android:id="@+id/dish_minweight"
	    	    android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:layout_marginLeft="10dip"
	    		android:textColor="#643C32"
	    		android:textSize="12sp"
	    		android:layout_gravity="bottom"
	    		android:text="500g起订"/>
	    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/dish_item_right_ll"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_margin="5dip"
    	android:layout_centerVertical="true"
	    android:layout_alignParentRight="true"
    	android:orientation="horizontal">
    	<com.jiaodong.hxl.widget.EditTextWithIcon
	        android:id="@+id/dish_item_edt"
	        android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:drawableBottom="@drawable/dish_sub1"
		    android:drawableTop="@drawable/dish_add1"
		    android:singleLine="true"
		    android:gravity="center"
		    android:layout_marginRight="8dip"
		    android:background="@drawable/dish_edt_bg1"
		    android:inputType="number"
		    android:focusable="false"
		    android:focusableInTouchMode="false"
		    android:visibility="gone"
		    android:text="1"/>
    	<com.jiaodong.hxl.widget.OnlineImageView
		    android:id="@+id/dish_imgv"
		    android:layout_width="70dip"
	    	android:layout_height="70dip"
	    	android:src="@drawable/gallery1"
	    	android:background="@color/transparent"/>
	</LinearLayout>
    
</RelativeLayout>
