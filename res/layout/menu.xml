<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menu_fl"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/menu_top_fl"
        android:layout_alignParentTop="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
        <com.jiaodong.hxl.widget.AdvGallery
            android:id="@+id/main_gallery"
            android:layout_width="fill_parent"
            android:layout_height="200dip"
            android:layout_marginTop="67dip"
            android:fadingEdge="none" />
        <RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="70dip"
	        android:background="@drawable/main_top_bg">
	
	        <Button
	            android:id="@+id/menu_back_btn"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="8dip"
	            android:layout_marginRight="5dip"
	            android:layout_centerVertical="true"
	            android:layout_alignParentLeft="true"
	            android:background="@drawable/back_btn" />
			<LinearLayout
			    android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:layout_marginLeft="30dip"
	            android:gravity="center"
			    android:layout_toRightOf="@id/menu_back_btn"
			    android:layout_toLeftOf="@+id/menu_tuijian_btn"
			    android:orientation="vertical">
			    <TextView
			        android:id="@+id/menu_total_tv"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:gravity="left"
		            android:text="已点0个菜"
		            android:textColor="#323232"
		            android:textSize="20sp" />
			    <LinearLayout
			        android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:gravity="left"
		            android:orientation="horizontal">
		            <TextView
		                android:id="@+id/menu_price_tv"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:text="￥0"
			            android:textStyle="bold"
			            android:textColor="#C30A0A"
			            android:textSize="16sp" />
		            <TextView
		                android:id="@+id/menu_avg_price_tv"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:text="，0人，人均￥0"
			            android:textColor="#8C8C8C"
			            android:textSize="16sp" />
		        </LinearLayout>
			</LinearLayout>
	        <Button
	            android:id="@+id/menu_tuijian_btn"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_margin="5dip"
	            android:text="推荐\n套餐"
	            android:visibility="invisible"
	            android:lines="2"
	            android:textColor="#C30A0A"
	            android:layout_centerVertical="true"
	            android:layout_alignParentRight="true"
	            android:background="@drawable/tuijian_btn_bg" />
	    </RelativeLayout>
    </FrameLayout>
    
	<LinearLayout
	    android:id="@+id/menu_list_ll"
	    android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/menu_top_fl"
        android:layout_above="@+id/menu_bottom_ll"
        android:orientation="horizontal">
	    <ListView
	        android:id="@+id/menu_list_left"
	        android:layout_width="match_parent"
        	android:layout_height="match_parent"
        	android:background="@drawable/dishtype_item_bg"
        	android:divider="@null"
        	android:choiceMode="singleChoice"
        	android:scrollbars="none"
        	android:layout_weight="3"/>
	    <ListView
	        android:id="@+id/menu_list_right"
	        android:layout_width="match_parent"
        	android:layout_height="match_parent"
        	android:layout_weight="1"
        	android:background="@color/white"
        	android:divider="@drawable/menu_devider"
        	android:listSelector="@color/transparent"
        	android:choiceMode="multipleChoice"
        	android:transcriptMode="alwaysScroll"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/menu_bottom_ll"
        android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:paddingTop="10dip"
	    android:paddingBottom="10dip"
        android:layout_alignParentBottom="true"
        android:background="@drawable/menu_submit_bg"
	    android:orientation="vertical">
	    <Button
	        android:id="@+id/menu_submit_btn"
		    android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:paddingLeft="30dip"
	        android:paddingRight="30dip"
	        android:paddingTop="10dip"
	        android:paddingBottom="10dip"
	        android:background="#C30A0A"
	        android:textColor="@color/white"
	        android:textStyle="bold"
	        android:gravity="center"
	       	android:textSize="16sp"
	        android:text="提交订单"/>
    </LinearLayout>
    
</RelativeLayout>
<ImageView
    android:id="@+id/menu_anim_imgv"
    android:layout_width="60dip"
	android:layout_height="60dip"
	android:visibility="gone"
	android:src="@drawable/ic_launcher"/>
</FrameLayout>