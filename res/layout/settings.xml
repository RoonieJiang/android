<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFAE6" >

    <RelativeLayout
        android:id="@+id/setting_top"
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:layout_alignParentTop="true"
        android:background="@drawable/main_top_bg" >

        <Button
            android:id="@+id/setting_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dip"
            android:background="@drawable/back_btn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/transparent"
            android:text="设 置"
            android:textColor="#000000"
            android:textSize="24sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/setting_bottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/menu_submit_bg"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/setting_exit_btn"
            android:layout_width="180dip"
            android:layout_height="50dip"
            android:layout_marginBottom="10dip"
            android:layout_marginTop="10dip"
            android:background="#C30A0A"
            android:text="注 销"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/setting_bottom"
        android:layout_below="@id/setting_top"
        android:background="#FFFAE6" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFAE6"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="15dip"
                android:background="@drawable/orderconfirm_bg"
                android:padding="10dip" >

                <TextView
                    android:id="@+id/setting_user_info_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:minEms="4"
                    android:text="当前账户"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/setting_user_info_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    android:layout_toRightOf="@id/setting_user_info_text"
                    android:maxLines="1"
                    android:textColor="#000000"
                    android:textSize="20sp" />
            </RelativeLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:background="@drawable/orderconfirm_devider_bottom" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="15dip"
                android:background="@drawable/orderconfirm_bg"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/setting_aboutus"
                    android:layout_width="fill_parent"
                    android:layout_height="50dip"
                    android:padding="10dip" >

                    <TextView
                        android:id="@+id/setting_aboutus_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:minEms="4"
                        android:text="关于我们"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/setting_aboutus_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dip"
                        android:src="@drawable/settings_btn" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/orderconfirm_devider" />

                <RelativeLayout
                    android:id="@+id/setting_feedback"
                    android:layout_width="fill_parent"
                    android:layout_height="50dip"
                    android:padding="10dip" >

                    <TextView
                        android:id="@+id/setting_feedback_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:minEms="4"
                        android:text="意见反馈"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/setting_feedback_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dip"
                        android:src="@drawable/settings_btn" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/orderconfirm_devider" />

                <RelativeLayout
                    android:id="@+id/setting_clear"
                    android:layout_width="fill_parent"
                    android:layout_height="50dip"
                    android:padding="10dip" >

                    <TextView
                        android:id="@+id/setting_clear_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:minEms="4"
                        android:text="清除缓存"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/setting_clear_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dip"
                        android:maxLines="1"
                        android:text="15.64M"
                        android:textColor="#000000"
                        android:textSize="20sp" />
                </RelativeLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:background="@drawable/orderconfirm_devider_bottom" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="15dip"
                android:background="@drawable/orderconfirm_bg"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/setting_checkupdate"
                    android:layout_width="fill_parent"
                    android:layout_height="50dip"
                    android:padding="10dip" >

                    <TextView
                        android:id="@+id/setting_checkupdate_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:minEms="4"
                        android:text="检查更新"
                        android:textColor="#000000"
                        android:textSize="20sp" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/orderconfirm_devider" />

                <RelativeLayout
                    android:id="@+id/setting_score"
                    android:layout_width="fill_parent"
                    android:layout_height="50dip"
                    android:padding="10dip" >

                    <TextView
                        android:id="@+id/setting_score_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:minEms="4"
                        android:text="给我打分"
                        android:textColor="#000000"
                        android:textSize="20sp" />
                </RelativeLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:background="@drawable/orderconfirm_devider_bottom" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>